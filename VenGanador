package ventanas;
import modelo.Jugador;
import javafx.scene.layout.*;
import javafx.scene.paint.Color;
import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.text.Font;
import javafx.stage.Stage;
import javafx.stage.StageStyle;
import javafx.scene.control.*;
import javafx.scene.image.ImageView;
/**
 *
 * @author 59399
 */
public class VenGanador extends Application {
    private final Jugador ganador;
    private Stage juego;
    private AnchorPane root;
    private Label lblGanador = new Label();
    private Label caja = new Label();

    public VenGanador(Jugador ganador, Stage juego) {
        this.ganador = ganador;
        this.juego=juego;
        root = new AnchorPane();
        organizarRoot();
    }
    private void organizarRoot(){
        ImageView fondo = new ImageView("/imagen/imagen1.png");
        fondo.setFitHeight(560);
        fondo.setFitWidth(450);
        caja.setMaxSize(80, 90);
        caja.setMinSize(80, 90);
        AnchorPane.setTopAnchor(caja, 250.0);
        AnchorPane.setLeftAnchor(caja, 175.0);
        root.getChildren().addAll(fondo,caja);
        AnchorPane.setBottomAnchor(lblGanador, 70.0);
        AnchorPane.setLeftAnchor(lblGanador, 105.0);
        lblGanador.setText(ganador.getNombre());
        lblGanador.setTextFill(Color.WHITESMOKE);
        lblGanador.setFont(Font.loadFont("file:src/imagen/imagen2.TTF", 35));       
        root.getChildren().add(lblGanador);
    }
    public void configBotones(Stage juego, Stage actual){
        caja.setOnMouseClicked(e->{juego.close();
        VenPrincipal vp = new VenPrincipal();
        actual.close();
        vp.start(new Stage());});
    }
    @Override
    public void start(Stage primaryStage) {
        configBotones(juego,primaryStage);
        Scene scene = new Scene(root,450,550);
        primaryStage.setResizable(false);
        primaryStage.setTitle("DATOS DEL JUGADOR");
        primaryStage.initStyle(StageStyle.TRANSPARENT);
        scene.setFill(Color.TRANSPARENT);
        primaryStage.setScene(scene);
        primaryStage.show();
    }      
}
