package ventanas;
import modelo.Configuracion;
import javafx.scene.layout.GridPane;
import javafx.scene.layout.VBox;
import javafx.scene.paint.Color;
import javafx.scene.shape.Rectangle;
import java.util.*;
import javafx.application.Application;
import javafx.geometry.Pos;
import javafx.scene.Scene;
import javafx.scene.control.*;
import javafx.scene.effect.DropShadow;
import javafx.scene.image.ImageView;
import javafx.scene.image.Image;
import javafx.scene.layout.AnchorPane;
import javafx.scene.layout.Background;
import javafx.scene.layout.BackgroundFill;
import javafx.scene.layout.Border;
import javafx.scene.text.Font;
import javafx.stage.Stage;
/**
 *
 * @author 59399
 */
public class VenPrincipal extends Application{
    private final AnchorPane root = new AnchorPane();
    private final Button nuevoJuego = new Button("Nuevo Juego");
    private final Button configuracion = new Button("Configuracion");
    private final Button reporte = new Button("Reporte");
    private final List<Button> arrBotones = Arrays.asList(nuevoJuego,configuracion,reporte);
    private final ImageView titulo = new ImageView(new Image("/recursos/Titulo.png"));
    private final ImageView fondo = new ImageView(new Image("/recursos/Fondo_Principal.jpg"));

    public VenPrincipal() {
        organizarRoot();
    }
    private void organizarRoot(){
        fondo.setFitHeight(560);
        fondo.setFitWidth(460);
        root.getChildren().addAll(fondo);
        titulo.setFitWidth(455);
        titulo.setFitHeight(200);
        VBox botones = ordenarBotones();
        AnchorPane.setTopAnchor(botones, 230.0);
        AnchorPane.setLeftAnchor(botones, 125.0);
        root.getChildren().addAll(titulo,botones);           
    }
    private VBox ordenarBotones(){
        VBox botones = new VBox (10);
        botones.setAlignment(Pos.CENTER);
        arrBotones.forEach(b->{
        b.setMaxWidth(200);
        b.setMinWidth(200);
        b.setMaxHeight(70);
        b.setMinHeight(70);
        b.setFont(Font.loadFont("file:src/recursos/Harry Potter.TTF", 35));
        b.setStyle("-fx-background-color: #F7FBFC");
        b.setAlignment(Pos.CENTER);
        b.setEffect(new DropShadow());});
        botones.getChildren().addAll(nuevoJuego,configuracion,reporte);
        return botones;
    }
    private void configBotones(Stage actual){
        nuevoJuego.setOnAction(e->{
        VenJugador vj = new VenJugador();    
        actual.close();
        vj.start(new Stage());
        });
        configuracion.setOnAction(e->{
        VenConfiguracion vc = new VenConfiguracion();        
        actual.close();
        vc.start(new Stage());
        });
        reporte.setOnAction(e->{
        VenReporte vr = new VenReporte();        
        actual.close();
        vr.start(new Stage());
        });
        arrBotones.forEach(b->{
            b.setOnMouseEntered(e->b.setStyle("-fx-background-color: #FF0040"));
            b.setOnMouseExited(e->b.setStyle("-fx-background-color: #F7FBFC"));
        });
    }
    @Override
    public void start(Stage primaryStage) {
        configBotones(primaryStage);
        Scene scene = new Scene(root,450,550);
        primaryStage.setResizable(false);
    }
    public AnchorPane getRoot() {
        return root;
    }
}
