package ventanas;
import modelo.Reporte;
import java.util.ArrayList;
import javafx.scene.layout.VBox;
import javafx.scene.paint.Color;
import javafx.scene.text.Font;
import javafx.scene.text.TextAlignment;
import javafx.stage.Stage;
import javafx.stage.StageStyle;
import java.util.Arrays;
import java.util.Collections;
import java.util.List;
import javafx.application.Application;
import javafx.geometry.Pos;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.control.ScrollPane;
import javafx.scene.effect.DropShadow;
import javafx.scene.image.ImageView;
import javafx.scene.layout.AnchorPane;
import javafx.scene.layout.HBox;
/**
 *
 * @author 59399
 */
public class VenReporte extends Application{
    private final AnchorPane root = new AnchorPane();
    private final ImageView fondo = new ImageView("/imagen/imagen9.png");
    private final ScrollPane resultados = new ScrollPane();
    private final Button regresar = new Button("Regresar");
    /**
     *
     */
    public VenReporte() {
        organizarRoot();   
    }
    private void organizarRoot(){
        fondo.setFitHeight(910);
        fondo.setFitWidth(700);
        AnchorPane.setLeftAnchor(resultados, 100.0);
        AnchorPane.setBottomAnchor(resultados, 91.6);
        resultados.setMaxSize(576, 518.1);
        resultados.setMinSize(576, 518.1);
        AnchorPane.setLeftAnchor(regresar, 330.0);
        AnchorPane.setBottomAnchor(regresar, 18.0);
        regresar.setStyle("-fx-background-color: black");
        regresar.setTextFill(Color.WHITE);
        regresar.setMinSize(100, 40);
        regresar.setEffect(new DropShadow());
        regresar.setFont(Font.loadFont("file:src/imagen/imagen10.TTF", 35));
        llenarResultados();
        root.getChildren().addAll(fondo,resultados,regresar);
    }
    private void llenarResultados(){   
    }
    public Label labelConFormato(String s){
        Label etiqueta = new Label(s);
        etiqueta.setTextAlignment(TextAlignment.CENTER);
        etiqueta.setAlignment(Pos.CENTER);
        etiqueta.setMaxWidth(130);
        etiqueta.setMinWidth(130);
        etiqueta.setFont(Font.font("Lucida Bright",14));
        etiqueta.setWrapText(true);
        return etiqueta;
    }
    public Label labelConFormato(String s,double width, double height){
        Label etiqueta = labelConFormato(s);
         etiqueta.setMaxWidth(width);
        etiqueta.setMinWidth(width);
        return etiqueta;
    }
    @Override
    public void start(Stage primaryStage){
        configBotones(primaryStage);
        Scene scene = new Scene(root,700,910);
        primaryStage.setResizable(false);
        primaryStage.setTitle("reportes");
        primaryStage.initStyle(StageStyle.TRANSPARENT); 
        scene.setFill(Color.TRANSPARENT);
        primaryStage.setScene(scene);
        primaryStage.show();
    }
    private void configBotones(Stage actual) {
        regresar.setOnAction(e->{ 
            VenPrincipal vp = new VenPrincipal();        
            actual.close();
            vp.start(new Stage()); });
        regresar.setOnMouseEntered(e->{
        regresar.setStyle("-fx-background-color:linear-gradient(to right, #9c1203, #00165e, #e3a000,#033807 )");
                regresar.setTextFill(Color.WHITE);});
        regresar.setOnMouseExited(e->{
        regresar.setStyle("-fx-background-color: black");
        regresar.setTextFill(Color.WHITE);});
    }
    public AnchorPane getRoot() {
        return root;
    }
}
